# Mandatory postgres setup
# Configuration below works if you run the postgresql through docker compose
POSTGRES_PASSWORD=<CHOOSE_A_PASSWORD>
POSTGRES_SERVER=localhost
# Optional postgres setup if you use a custom DB, leave out if you want us to configure the DB
POSTGRES_PORT=<CONFIGURE PORT FOR POSTGRES>
POSTGRES_DB=<CUSTOM_DB>
POSTGRES_USER=<CUSTOM_DB_USER>
# Mandatory for local dev
CORS_ALLOWED_ORIGINS=http://localhost:3000
AWS_DEFAULT_REGION=eu-west-1
LOGGING_DIRECTORY=./tmp/logs

# Optional configuration, if left out these integrations will be disabled
AWS_DEFAULT_PROFILE=<PROFILE_WITH_RIGHTS>

# OIDC Configuration
OIDC_CLIENT_ID=<ID>
OIDC_CLIENT_SECRET=<SECRET>
OIDC_AUTHORITY=<AUTH_URL>
OIDC_REDIRECT_URI=http://localhost:3000/,http://localhost:8080/
OIDC_ENABLED=true
# OR disable OIDC
OIDC_ENABLED=false

# Conveyor setup
CONVEYOR_API_KEY=api_key
CONVEYOR_SECRET=api_secret

# Plugin Configuration (optional)
# Comma-separated list of plugin module paths to enable
# Leave empty to use defaults (Snowflake, Databricks, Glue, Redshift)
# External plugins installed via pip will be discovered automatically through entry points
# ENABLED_PLUGINS=app.data_output_configuration.snowflake.schema.SnowflakeDataOutput,app.data_output_configuration.databricks.schema.DatabricksDataOutput
ENABLED_PLUGINS=

# Auto-run plugin migrations on startup (default: true)
# When enabled, 'alembic upgrade head' runs automatically to create plugin tables
# Disable in production if you prefer manual migration control
AUTO_RUN_PLUGIN_MIGRATIONS=true
